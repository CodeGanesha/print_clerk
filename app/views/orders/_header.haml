%table
  %tr
    %td{:width => "345"}= image_tag t(:html_invoice_logo_path) || "store/invoice_logo.jpg", :id => "logo"
    %td{:width => "345"}
      - if @order.payment_type.class.name == 'CashOnDelivery::PaymentMethod'
        .cod
          = "COD - #{number_to_currency(@order.total)}"
      %div{:align => "right"}
        %p.title= I18n.t("#{params[:template]}.header")
        %p.bold= I18n.t(:order_number).to_s + " " + @order.number
        %p.bold
          = I18n.l(@order.ordered_on.to_date) if @order.ordered_on
