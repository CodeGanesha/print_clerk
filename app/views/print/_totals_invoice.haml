%table.totals
  %tr
    %td.cel1.bold
      = t(:item_total)
      \:
    %td.cel2.bold.cell{:align => "right"}= number_to_currency @order.total_price
    %tr
      %td.cel1.bold
        Tax
        \:
      %td.cel2.cell{:align => "right"}= number_to_currency @order.total_tax
  %tr
    %td.cel1.bold
      %strong
        = t(:order_total)
        \:
    %td.cel2.cell{:align => "right"}
      %strong
        %span#summary-order-total= number_to_currency @order.total_price
