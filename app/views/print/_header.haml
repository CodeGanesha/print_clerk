%table
  %tr
    %td{:width => "345"}= image_tag Spree::HtmlInvoice::Config[:html_invoice_logo_path] || "store/invoice_logo.jpg", :id => "logo"
    %td{:width => "345"}
      - if @order.payment_method.class.name == 'Spree::CashOnDelivery::PaymentMethod'
        .cod
          = "COD - #{number_to_currency(@order.total)}"
      %div{:align => "right"}
        %p.title= I18n.t("#{params[:template]}.header")
        %p.bold= I18n.t(:order_number).to_s + " " + @order.number
        %p.bold
          = I18n.l(@order.completed_at.to_date) if @order.completed_at
